extends ../layouts/common.pug
block content
  h3 Create new transaction

  form(action="/transactions/create", method="POST")
    
    .form-group
      label(for="user") Borrower Name: 
      select.custom-select#user(name='userId')
        each user in users
          option(value=user.id)=user.name
      
    .form-group  
      label(for="book") Book Title: 
      select.custom-select#book(name='bookId')
        each book in books
          option(value=book.id)=book.title
        
    button.btn.btn-primary Add transaction
  a(href="/transactions/") Back


